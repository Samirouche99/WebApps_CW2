<!DOCTYPE html>
<html lang="en">
<head>
  {{>header}}
</head>
<body>

  {{>nav}}


<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      {{#errors}}
        <div class="alert alert-danger" role="alert">{{msg}}</div>
      {{/errors}}
      <form action="/contactPost" method="post" class="card shadow">
        <div class="card-body">
          <div class="form-group">
            <label for="name">Your name:</label>
            <input type="text" id="name" name="name" class="form-control" value="{{ name }}" required>
          </div>
          <div class="form-group">
            <label for="message">Message:</label>
            <textarea id="message" name="message" class="form-control" rows="4" required>{{ message }}</textarea>
          </div>
          <button type="submit" class="btn btn-primary">Send</button>
        </div>
      </form>
      {{#user}}
      <div class="mt-4">
        <h2 class="h5 mb-3">Rate this page:</h2>
        <form>
          <select class="custom-select">
            <option value="1">1 Star</option>
            <option value="2">2 Stars</option>
            <option value="3">3 Stars</option>
            <option value="4">4 Stars</option>
            <option value="5" selected>5 Stars</option>
          </select>
          <button type="submit" class="btn btn-outline-secondary mt-2">Submit Rating</button>
        </form>
      </div>
      {{/user}}
      {{^user}}
      <div class="mt-4">
        <p>Only logged-in users can rate this page.</p>
      </div>
      {{/user}}
    </div>
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
